<div>
  <h1>Shopping List</h1>
  <table>
    <tr>
      <th>Food</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
    <h2>amought of items to buy: <%= @recipefoods.length%></h2>
    <h3>total value of food needed it: <%= @recipefoods.sum {
        |recipefood| (recipefood.quantity - recipefood.food.quantity) * recipefood.food.price } %></h3>
    <% @recipefoods.each do |foods| %>
    <tr>
        <td class="p-4"><%= foods.food.name %></td>
        <td class="p-4"><%= foods.quantity - foods.food.quantity %></td>
        <td class="p-4"><%= foods.food.price * (foods.quantity - foods.food.quantity) %></td>
    </tr>
    <% end %>
  </table>
</div>